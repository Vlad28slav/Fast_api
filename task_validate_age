# 3. Given class Person. Modify the code to allow only integer values while
# setting age attribute. You should validate age value not only in __init__
# funcion, but for later changes as well.
# Example:
# p = Person("John", 18)
# p.age = "qwerty"   -> should be an exception
class Person:
    def __init__(self, name, age, id):
        self.name = name
        self._age = age
        self._id = id

    @property
    def age(self):
        print("try to fetch")
        return self._age


    @age.setter
    def age(self, value):
        print("try to st")
        if isinstance(value, int) and value > 0:
            self._age = value
        else:
            raise ValueError("Age must be a positive integer")

    @property
    def id(self):
        return self._id

    @id.setter
    def id(self, value):
        if not (value is None):
            self._id = value
        else:
            raise ValueError("Id requeired")

    @id.deleter
    def id(self):
        raise AttributeError("Cannot delete property id")




chelik = Person("Boris", 55, "soyjack228")
print(chelik.age)
chelik.age = 8
del(chelik.id)
